<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/alcoholName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/alcoholImg"
        android:layout_marginStart="140dp"
        android:text="땅콩"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alcoholDate"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/alcoholImg"
        android:layout_alignParentEnd="true"
        android:text="2018.10.03"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/alcoholImg"
        android:layout_width="119dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/peanut" />
</RelativeLayout>